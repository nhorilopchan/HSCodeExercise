<!-- Filterable Content Block -->
<%include ../partials/_blueheader%>

<section class="filterable-content-block">
	<div class="content-wrapper">
		<div>
			<div class="filters-panel">
				<div class="row first">
					<div class="dropdown">
						<span>Genre</span>
						<div></div>
					</div>
					<div class="dropdown">
						<span>Year</span>
						<div></div>
					</div>
					<div>
						<input type="text">
					</div>
				</div>
				<div class="row second">
					<div>
						<input type="radio">
						<label>Movies</label>
					</div>
					<div>
						<input type="radio">
						<label>Books</label>
					</div>
					<div class="clear-filters">
						<a href="#">Clear filters</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="content-wrapper list-wrapper">
		<div>
			<div>
				<ul class="contents-list">
                    <% data.media.forEach(function(media) {
					%>
					<li>
						<div class="thumbnail-wrapper">
							<img src="<%= media.poster %>" title="<%= media.title %>" />
						</div>
						<div class="info-wrapper">
							<p><%= media.title %>(<%= media.year%>)</p>
							<p>Genres:<%= media.genre%></p>
						</div>
					</li>
                    <% }); %>
				</ul>

			</div>
		</div>
	</div>
</section>